<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sticky_root_view"
    android:orientation="vertical">

    <com.winnie.library.stickynav.layout.StickyNestScrollChildLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@id/sticky_nav_head_view_layout"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/sticky_nav_tab_bar_layout"/>

    </com.winnie.library.stickynav.layout.StickyNestScrollChildLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/sticky_nav_tab_view_layout"/>

</LinearLayout>