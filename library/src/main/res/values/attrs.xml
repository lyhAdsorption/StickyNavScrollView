<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Sticky style-->
    <declare-styleable name="StickyScrollView">
        <attr name="headView" format="reference"/>
        <attr name="tabBar" format="reference"/>
    </declare-styleable>

    <!--StickyNav style-->
    <declare-styleable name="StickyNav">
        <attr name="navHeadView" format="reference"/>
        <attr name="navTabBar" format="reference"/>
        <attr name="navTabView" format="reference"/>
    </declare-styleable>

    <!--StickyPullToRefresh-->
    <declare-styleable name="StickyPullToRefresh">
        <attr name="headerBackGround" format="reference|color"/>

        <attr name="headerTextAppearance" format="reference"/>
        <attr name="headerSubTextAppearance" format="reference"/>

        <attr name="headerTextColor" format="reference|color"/>
        <attr name="headerSubTextColor" format="reference|color"/>

        <attr name="headerDrawable" format="reference"/>
    </declare-styleable>
</resources>