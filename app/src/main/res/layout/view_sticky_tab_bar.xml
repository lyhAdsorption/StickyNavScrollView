<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab1"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_detail_text"
                android:textColor="#ff5647"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:text="详情"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ff5647"
                android:id="@+id/service_detail_view"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab2"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/service_dynamic_text"
                android:textColor="#333333"
                android:textSize="14dp"
                android:text="动态"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ff5647"
                android:id="@+id/service_dynamic_view"
                android:visibility="gone"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab3"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#333333"
                android:textSize="14dp"
                android:id="@+id/service_evaluate_text"
                android:text="评价"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#ff5647"
                android:visibility="gone"
                android:id="@+id/service_evaluate_view"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

</LinearLayout>